<html
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:p="tapestry:parameter">
    <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->
    <head>
        <meta charset="utf-8"/>
        <title>${tabTitle}</title>
        
        <script type="text/javascript" src="js/shCore.js"></script>
        <script type="text/javascript" src="js/shBrushJScript.js"></script>
        <script type="text/javascript" src="js/shBrushXml.js"></script>
    </head>


    <body>

        <header id="header">
            <hgroup>
                <h1 class="site_title"><a href="index.html">SmartCard Admin Panel</a></h1>
                <h2 class="section_title">${pageTitle}</h2>
            </hgroup>
        </header> <!-- end of header bar -->

        <section id="secondary_bar">
            <div class="user">
                <p>John Doe (<a href="#">Logout</a>)</p>
                <!-- <a class="logout_user" href="#" title="Logout">Logout</a> -->
            </div>
            <div class="breadcrumbs_container">
                <article class="breadcrumbs"><a href="index.html">Website Admin</a> <div class="breadcrumb_divider"></div> <a class="current">${breadcrumb}</a></article>
            </div>
        </section><!-- end of secondary bar -->

        <aside id="sidebar" class="column">
            <form class="quick_search">
                <input type="text" value="Quick Search" onfocus="if (!this._haschanged) {
                            this.value = ''
                        }
                        ;
                        this._haschanged = true;"/>
            </form>
            <hr/>
            <h3>Cards</h3>
            <ul class="toggle">
                <li class="icn_new_article"><a href="#">New Card</a></li>
                <li class="icn_edit_article"><a href="#">Edit Card</a></li>
                <li class="icn_categories"><a href="#">Add Categories</a></li>
                <li class="icn_edit_article"><a href="#">Edit Categories</a></li>
            </ul>
            <h3>Users</h3>
            <ul class="toggle">
                <li class="icn_add_user"><a href="#">Add New User</a></li>
                <li class="icn_edit_article"><a href="#">Edit User</a></li>
                <li class="icn_profile"><a href="#">Your Profile</a></li>
            </ul>

            <br/>
            <br/>
            <hr />
            <span><li class="icn_jump_back"><a href="#">Logout</a></li></span>

            <footer>
                <hr />
                <p><strong>Copyright &copy; SmartCarad 2013</strong></p>
                <p>Developed by <a href="mailto:bogdanbegovic@gmail.com">Bogdan BegoviÄ‡</a></p>
            </footer>
        </aside><!-- end of sidebar -->

    <t:body/>

</body>

</html>
