<html t:type="adminborder" title="About smartcards"
      t:pageTitle="${message:pageTitle}"
      t:tabTitle="${message:tabTitle}"
      t:breadcrumb="${message:breadcrumb}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <section id="main" class="column">

        <article class="module width_full">
            <header><h3>Post New Article</h3></header>
            <div class="module_content">
                <fieldset>
                    <label>Card Question</label>
                    <textarea rows="10"></textarea>
                </fieldset>
                <fieldset>
                    <label>Card Answer</label>
                    <textarea rows="10"></textarea>
                </fieldset>
                <fieldset style="width:48%; margin-right: 3%;"> <!-- to make two field float next to one another, adjust values accordingly -->
                    <label>Category</label>
                    <select style="width:92%;">
                        <option>Articles</option>
                        <option>Tutorials</option>
                        <option>Freebies</option>
                    </select>
                </fieldset>
            </div>
            <footer>
                <div class="submit_link">
                    <input type="submit" value="Publish" class="alt_btn"/>
                    <input type="submit" value="Reset"/>
                    <input type="submit" value="Preview" class="alt_btn_preview"/>
                </div>
            </footer>
        </article><!-- end of post new article -->

        <article class="module width_full">
            <header><h3>Post New Article</h3></header>
            <div class="module_content">
                <div class="flipbox-container">

                    <div class="flipbox">
                        <span>Hello !</span>
                    </div>

                </div>
            </div>
            <footer>
                <a class="btn" id="btn-left" href="#">Left</a>
            </footer>
        </article><!-- end of post new article -->

        <div class="clear"></div>

        <div class="spacer"></div>


    </section>

</html>
